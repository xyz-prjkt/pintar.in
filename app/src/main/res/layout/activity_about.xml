<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="96dp"
        app:cardBackgroundColor="@android:color/system_accent2_50"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:lottie_rawRes="@raw/loginpanel"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <com.github.mmin18.widget.RealtimeBlurView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:realtimeBlurRadius="8dp"
            app:realtimeOverlayColor="#20FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="24dp">

            <TextView
                android:id="@+id/pintarin_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppinsblack"
                android:lineSpacingMultiplier="0.85"
                android:text="pintar\nin"
                android:textColor="@android:color/system_accent2_800"
                android:textSize="50sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/pintarin_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/poppinslight"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. ac volutpat nulla. Donec in ullamcorper felis, non lacinia turpis. Nullam feugiat aliquam ligula tempus imperdiet."
                android:textSize="14sp"
                android:justificationMode="inter_word"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppinsmedium"
                android:lineSpacingMultiplier="0.85"
                android:text="Made with &lt;3 by"
                android:textSize="14sp"
                android:justificationMode="inter_word"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/about_xyzuan"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="99dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/about_xyzuan"
                        tools:ignore="ContentDescription" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/about_zara"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="-18dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="99dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/about_zara"
                        tools:ignore="ContentDescription" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/about_rosydan"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="-18dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="99dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/about_rosydan"
                        tools:ignore="ContentDescription" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppinsmedium"
                android:lineSpacingMultiplier="0.85"
                android:text="Supported by :"
                android:textSize="14sp"
                android:justificationMode="inter_word"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/umm_logo"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    app:cardBackgroundColor="@android:color/system_accent2_800"
                    app:cardCornerRadius="18dp"
                    app:strokeWidth="0dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/umm_logo"
                        android:tint="@android:color/system_accent2_50"
                        tools:ignore="ContentDescription,UseAppTint" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/labit_logo"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="18dp"
                    app:strokeWidth="0dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/labit_logo"
                        android:tint="@android:color/system_accent2_800"
                        tools:ignore="ContentDescription,UseAppTint" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>