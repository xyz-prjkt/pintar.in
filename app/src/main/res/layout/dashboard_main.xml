<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="8dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:cardBackgroundColor="@color/cardBgColor_monet_1"
            style="@style/pintarinCardStyle">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="horizontal">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_marginStart="-32dp"
                    android:scaleType="centerCrop"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/person" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="28dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsblack"
                    android:lineSpacingMultiplier="0.90"
                    android:text="What do you want to learn today?"
                    android:textAlignment="textEnd"
                    android:textColor="@color/cardBgMaskColor_monet_4"
                    android:textSize="26sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/getStartedBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="8dp"
                    android:text="Get started"
                    android:textAllCaps="false"
                    android:textColor="@color/cardBgColor_monet_1"
                    android:textSize="16sp"
                    app:backgroundTint="@color/cardBgMaskColor_monet_4" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="8dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/pintarinCourse"
            android:layout_width="200dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/cardBgColor_monet_2"
            style="@style/pintarinCardStyle">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@id/icon"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:alpha="0.1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_menu_book_24"
                    android:tint="@android:color/system_accent1_800"
                    tools:ignore="UseAppTint" />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsblack"
                    android:text="Course\nLibrary"
                    android:textSize="24sp"
                    android:textColor="?android:attr/textColorPrimary"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="16dp"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/pintarinAbout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/cardBgColor_monet_3"
            style="@style/pintarinCardStyle">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@id/icon"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:alpha="0.1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_info_24"
                    android:tint="@android:color/system_neutral2_900"
                    tools:ignore="UseAppTint" />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsblack"
                    android:text="About\nApp"
                    android:textSize="24sp"
                    android:textColor="?android:attr/textColorPrimary"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>